    <script>
        $(document).ready(function () {
            // Êñ∞Â¢ûÊåâÈàïÂäüËÉΩ
            $('.btn-custom').click(function () {
                var formData = {};
                var hasError = false;

                $('.form-row .form-group').each(function () {
                    var label = $(this).find('label').text().trim();
                    var input = $(this).find('input, select');

                    if (label && label !== '' && label !== ' ' && input.length > 0) {
                        formData[label] = input.val();
                    }
                });

                // È©óË≠âÂøÖÂ°´Ê¨Ñ‰Ωç
                if (!formData['EQP_ID'] || formData['EQP_ID'].trim() === '') {
                    alert('Ë´ãÂ°´ÂØ´ EQP_ID');
                    $('.form-row .form-group').eq(0).find('input').focus();
                    return;
                }

                if (!formData['PRODG_ID'] || formData['PRODG_ID'].trim() === '') {
                    alert('Ë´ãÂ°´ÂØ´ PRODG_ID');
                    $('.form-row .form-group').eq(1).find('input').focus();
                    return;
                }

                console.log('Êñ∞Â¢ûË≥áÊñô:', formData);
                alert('Ë≥áÊñôÈ©óË≠âÈÄöÈÅéÔºÅË≥áÊñôÂ∑≤ÈÄÅÂá∫Êñ∞Â¢û');

                // Ê∏ÖÁ©∫Ë°®ÂñÆ
