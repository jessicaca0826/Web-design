                console.log('ÁØ©ÈÅ∏Ê¢ù‰ª∂:', {
                    field: field,
                    operator: operator,
                    value: value,
                    logic: logic
                });

                alert('ÁØ©ÈÅ∏ÂäüËÉΩÂü∑Ë°å‰∏≠...\nÊ¢ù‰ª∂: ' + field + ' ' + operator + ' ' + value);
            });

