    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // æ–°å¢æŒ‰éˆ•åŠŸèƒ½
            $('.btn-custom').click(function() {
                var formData = {};
                var hasError = false;
                
                $('.form-row .form-group').each(function() {
                    var label = $(this).find('label').text().trim();
                    var input = $(this).find('input, select');
                    
                    if (label && label !== '' && label !== ' ' && input.length > 0) {
                        formData[label] = input.val();
                    }
                });
                
                // é©—è­‰å¿…å¡«æ¬„ä½
                if (!formData['EQP_ID'] || formData['EQP_ID'].trim() === '') {
                    alert('è«‹å¡«å¯« EQP_ID');
                    $('.form-row .form-group').eq(0).find('input').focus();
                    return;
                }
                
                if (!formData['PRODG_ID'] || formData['PRODG_ID'].trim() === '') {
                    alert('è«‹å¡«å¯« PRODG_ID');
                    $('.form-row .form-group').eq(1).find('input').focus();
                    return;
                }
                
                console.log('æ–°å¢è³‡æ–™:', formData);
                alert('è³‡æ–™é©—è­‰é€šéï¼è³‡æ–™å·²é€å‡ºæ–°å¢');
                
                // æ¸…ç©ºè¡¨å–®
                $('.form-row input, .form-row select').val('');
            });
            
            // ç™»å…¥æŒ‰éˆ•åŠŸèƒ½
            $('.btn-login').click(function() {
                var id = $('.login-section input[type="text"]').val();
                var password = $('.login-section input[type="password"]').val();
                var remember = $('#rememberMe').is(':checked');
                
                if (!id || id.trim() === '') {
                    alert('è«‹è¼¸å…¥å¸³è™Ÿ');
                    $('.login-section input[type="text"]').focus();
                    return;
                }
                
                if (!password || password.trim() === '') {
                    alert('è«‹è¼¸å…¥å¯†ç¢¼');
                    $('.login-section input[type="password"]').focus();
                    return;
                }
                
                console.log('ç™»å…¥è³‡è¨Š:', {id: id, remember: remember});
                alert('ç™»å…¥æˆåŠŸï¼\nID: ' + id + (remember ? '\nå·²è¨˜ä½å¯†ç¢¼' : ''));
                
                // æ¸…ç©ºç™»å…¥è¡¨å–®
                $('.login-section input').val('');
                $('#rememberMe').prop('checked', false);
            });
            
            // ç¯©é¸åŠŸèƒ½
            $('.btn-info').click(function() {
                var field = $('.filter-controls select').eq(0).val();
                var operator = $('.filter-controls select').eq(1).val();
                var value = $('.filter-controls input[type="text"]').val();
                var logic = $('.filter-controls select').eq(2).val();
                
                if (!value || value.trim() === '') {
                    alert('è«‹è¼¸å…¥ç¯©é¸æ¢ä»¶å€¼');
                    $('.filter-controls input[type="text"]').focus();
                    return;
                }
                
                console.log('ç¯©é¸æ¢ä»¶:', {
                    field: field, 
                    operator: operator, 
                    value: value,
                    logic: logic
                });
                
                alert('ç¯©é¸åŠŸèƒ½åŸ·è¡Œä¸­...\næ¢ä»¶: ' + field + ' ' + operator + ' ' + value);
            });
            
            // æ¸…é™¤æ¢ä»¶
            $('.btn-warning').click(function() {
                $('.filter-controls input[type="text"]').val('');
                $('.filter-controls select').each(function() {
                    $(this).prop('selectedIndex', 0);
                });
                alert('ç¯©é¸æ¢ä»¶å·²æ¸…é™¤');
            });
        });
    </script>
