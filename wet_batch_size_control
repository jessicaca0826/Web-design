    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <script>
        // IE 版本檢測（用於除錯）
        (function() {
            var ua = navigator.userAgent;
            var ie = ua.indexOf('MSIE ');
            var ie11 = ua.indexOf('Trident/');
            
            if (ie > 0) {
                var version = parseInt(ua.substring(ie + 5, ua.indexOf('.', ie)), 10);
                document.body.className += ' ie' + version;
                console.log('檢測到 IE' + version);
            } else if (ie11 > 0) {
                document.body.className += ' ie11';
                console.log('檢測到 IE11');
            }
        })();
        
        $(document).ready(function() {
            console.log('頁面載入完成，jQuery 版本:', $.fn.jquery);
            
            // 新增按鈕功能
            $('.btn-custom').click(function() {
                var formData = {};
                var hasError = false;
                
                // 收集表單資料
                $('.form-row-bootstrap .form-group-inline').each(function() {
                    var label = $(this).find('label').text().trim();
                    var input = $(this).find('input, select');
                    
                    if (label && label !== '' && input.length > 0) {
                        formData[label] = input.val();
                    }
                });
                
                // 驗證必填欄位
                if (!formData['EQP_ID'] || formData['EQP_ID'].trim() === '') {
                    alert('請填寫 EQP_ID');
                    $('.form-row-bootstrap .form-group-inline').eq(0).find('input').focus();
                    return;
                }
                
                if (!formData['PRODG_ID'] || formData['PRODG_ID'].trim() === '') {
                    alert('請填寫 PRODG_ID');
                    $('.form-row-bootstrap .form-group-inline').eq(1).find('input').focus();
                    return;
                }
                
                console.log('新增資料:', formData);
                alert('資料驗證通過！\n\n' + 
                      'EQP_ID: ' + formData['EQP_ID'] + '\n' +
                      'PRODG_ID: ' + formData['PRODG_ID'] + '\n\n' +
                      '實際應用中，這裡會送出資料到伺服器。');
                
                // 清空表單
                $('.form-row-bootstrap input, .form-row-bootstrap select').val('');
            });
            
            // 登入按鈕功能
            $('.login-section .btn').click(function() {
                var id = $('.login-section input[type="text"]').val();
                var password = $('.login-section input[type="password"]').val();
                var remember = $('.login-section input[type="checkbox"]').is(':checked');
                
                if (!id || id.trim() === '') {
                    alert('請輸入帳號');
                    $('.login-section input[type="text"]').focus();
                    return;
                }
                
                if (!password || password.trim() === '') {
                    alert('請輸入密碼');
                    $('.login-section input[type="password"]').focus();
                    return;
                }
                
                console.log('登入資訊:', {id: id, remember: remember});
                alert('登入驗證通過！\n\n' +
                      'ID: ' + id + '\n' +
                      '記住密碼: ' + (remember ? '是' : '否') + '\n\n' +
                      '實際應用中，這裡會進行身份驗證。');
            });
            
            // 篩選功能
            $('.filter-controls .btn-info').click(function() {
                var field = $('.filter-controls select').eq(0).val();
                var operator = $('.filter-controls select').eq(1).val();
                var value = $('.filter-controls input[type="text"]').val();
                var logic = $('.filter-controls select').eq(2).val();
                
                if (!value || value.trim() === '') {
                    alert('請輸入篩選條件值');
                    $('.filter-controls input[type="text"]').focus();
                    return;
                }
                
                console.log('篩選條件:', {
                    field: field, 
                    operator: operator, 
                    value: value,
                    logic: logic
                });
                
                // 簡單的篩選模擬
                var matchingRows = 0;
                $('.table-custom tbody tr').each(function() {
                    var row = $(this);
                    if (row.find('input[type="text"]').length > 0) return; // 跳過編輯行
                    
                    var cellValue = '';
                    switch(field) {
                        case 'EQP_ID': cellValue = row.find('td').eq(1).text(); break;
                        case 'PRODG_ID': cellValue = row.find('td').eq(2).text(); break;
                        case 'PRODUCT_GROUP': cellValue = row.find('td').eq(3).text(); break;
                        case 'PRODSPEC_ID': cellValue = row.find('td').eq(4).text(); break;
                        case 'OPE_NO': cellValue = row.find('td').eq(5).text(); break;
                    }
