    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 新增按鈕功能
            const addBtn = document.querySelector('.btn-primary');
            if (addBtn && addBtn.textContent.trim() === '新增') {
                addBtn.addEventListener('click', function() {
                    const form = addBtn.closest('.card-body');
                    const inputs = form.querySelectorAll('input, select');
                    const formData = {};
                    
                    inputs.forEach(input => {
                        const label = input.previousElementSibling;
                        if (label && label.tagName === 'LABEL') {
                            formData[label.textContent] = input.value;
                        }
                    });
                    
                    console.log('表單資料:', formData);
                    
                    // 簡單驗證
                    if (Object.values(formData).some(value => value.trim() !== '')) {
                        alert('新增功能待實作\n已收集表單資料，請查看控制台');
                    } else {
                        alert('請至少填寫一個欄位');
                    }
                });
            }
            
            // 登入按鈕功能
            const loginBtn = document.querySelector('.btn-light');
            if (loginBtn && loginBtn.textContent.trim() === '登入帳號') {
                loginBtn.addEventListener('click', function() {
                    const loginForm = loginBtn.closest('.d-flex');
                    const inputs = loginForm.querySelectorAll('input');
                    const id = inputs[0].value.trim();
                    const password = inputs[1].value.trim();
                    
                    if (id && password) {
                        alert(`登入功能待實作\n帳號: ${id}\n密碼: ${'*'.repeat(password.length)}`);
                    } else {
                        alert('請輸入完整的帳號和密碼');
                    }
                });
            }
            
            // 操作選擇功能
            const actionSelects = document.querySelectorAll('tbody select');
            actionSelects.forEach(select => {
                select.addEventListener('change', function() {
                    if (this.value !== '選擇操作') {
                        alert(`選擇了操作: ${this.value}\n此功能待實作`);
                    }
                });
            });
        });
    </script>
