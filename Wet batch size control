      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
      
      <script>
          // 簡單的互動功能
          document.addEventListener('DOMContentLoaded', function() {
              // 新增按鈕功能
              const addBtn = document.querySelector('.btn-custom');
              if (addBtn && addBtn.textContent === '新增') {
                  addBtn.addEventListener('click', function() {
                      // 收集表單資料
                      const formData = {};
                      const inputs = document.querySelectorAll('.form-row input, .form-row select');
                      inputs.forEach(input => {
                          if (input.previousElementSibling && input.previousElementSibling.tagName === 'LABEL') {
                              const label = input.previousElementSibling.textContent;
                              formData[label] = input.value;
                          }
                      });
                      
                      console.log('新增資料:', formData);
                      alert('新增功能待實作\n已收集表單資料，請查看控制台');
                  });
              }
              
              // 登入按鈕功能
              const loginBtn = document.querySelector('.btn-login');
              if (loginBtn) {
                  loginBtn.addEventListener('click', function() {
                      const loginSection = loginBtn.parentElement;
                      const inputs = loginSection.querySelectorAll('input');
                      const id = inputs[0].value;
                      const password = inputs[1].value;
                      
                      if (id && password) {
                          const rememberMe = document.getElementById('rememberMe').checked;
                          alert('登入功能待實作\nID: ' + id + (rememberMe ? '\n將記住密碼' : ''));
                      } else {
                          alert('請輸入帳號和密碼');
                      }
                  });
              }
          });
      </script>
